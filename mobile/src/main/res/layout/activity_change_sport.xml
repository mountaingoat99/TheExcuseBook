<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.rodriguez.theexcusebook.ChangeSport"
    android:background="@color/primary_dark">

    <TextView
        android:id="@+id/chooseDive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="@string/choose_sport"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/secondary_text"
        android:gravity="start"/>

    <Spinner
        android:id="@+id/spinnerChooseSport"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chooseDive"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/borderlessButtonStyle"
        android:text="@string/update_sport"
        android:id="@+id/btnUpdateSport"
        android:textSize="@dimen/button_text_small"
        android:layout_below="@+id/spinnerChooseSport"
        android:layout_alignRight="@+id/spinnerChooseSport"
        android:layout_alignEnd="@+id/spinnerChooseSport"
        android:layout_marginBottom="16dp"/>

</RelativeLayout>
