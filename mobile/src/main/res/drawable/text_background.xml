<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners
                android:radius="20dp"
                />
        <solid
            android:color="#878787"
            />
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle" >
            <corners
                android:radius="20dp"
                />
            <solid
                android:color="#FFFCFC"
                />
            <padding
                android:left="4dp"
                android:top="0dp"
                android:right="4dp"
                android:bottom="0dp"
                />
            <!--<size-->
                <!--android:width="270dp"-->
                <!--android:height="60dp"-->
                <!--/>-->
            <stroke
                android:width="1dp"
                android:color="@color/black"
                />
        </shape>
    </item>

</layer-list>